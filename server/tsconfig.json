{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "baseUrl": "./",
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["server/typings", "./node_modules/@types"]
  },
  "exclude": ["dist", "node_modules", "test"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
